<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Register">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:text="Register"
        android:fontFamily="@font/ekkamai"
        android:textSize="25dp" />

    <TextView
        android:id="@+id/txtUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Username"
        android:textSize="20dp"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/ekkamai"
        android:layout_below="@+id/textView2"
        />

    <TextView
        android:id="@+id/txtPass"
        android:layout_below="@+id/txtUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Password"
        android:textSize="20dp"
        android:fontFamily="@font/ekkamai"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="20dp"
        />

    <TextView
        android:id="@+id/txtConfPass"
        android:layout_below="@+id/txtPass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Re-Password"
        android:textSize="20dp"
        android:fontFamily="@font/ekkamai"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="19dp"
        />

    <EditText
        android:id="@+id/inputUname"
        android:layout_width="155dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView2"
        android:fontFamily="@font/ekkamai"
        android:layout_marginLeft="35dp"
        android:layout_toRightOf="@+id/txtUser" />

    <EditText
        android:id="@+id/inputPass"
        android:layout_width="155dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/inputUname"
        android:layout_marginLeft="35dp"
        android:fontFamily="@font/ekkamai"
        android:layout_toRightOf="@+id/txtUser" />

    <EditText
        android:id="@+id/inputConfPass"
        android:layout_width="155dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/inputPass"
        android:layout_marginLeft="35dp"
        android:fontFamily="@font/ekkamai"
        android:layout_toRightOf="@+id/txtUser" />

    <Button
        android:id="@+id/btnSubmit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:fontFamily="@font/ekkamai"
        android:layout_marginTop="220dp"
        android:onClick="addUser"
        android:text="Submit" />

    <Button
        android:id="@+id/test"
        android:layout_width="139dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="213dp"
        android:fontFamily="@font/ekkamai"
        android:onClick="viewdata"
        android:text="test" />

</RelativeLayout>