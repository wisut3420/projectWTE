<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#4d4d4d"
    tools:context=".where">

    <TextView
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/lightlogo"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#ffcc99" />

    <TextView
        android:id="@+id/restaurant"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:textStyle="bold"
        android:fontFamily="@font/ekkamai"
        android:textSize="25dp"
        android:text="" />

    <RelativeLayout
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:background="#ffe6cc"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="90dp">

        <TextView
            android:id="@+id/txtOpen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/ekkamai"
            android:textStyle="bold"
            android:textSize="20dp"
            android:text="เวลาทำการ"/>

        <TextView
            android:id="@+id/opentime"
            android:layout_below="@+id/txtOpen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/ekkamai"
            android:textSize="20dp"
            android:text=""/>

        <TextView
            android:id="@+id/txtMenu"
            android:layout_below="@id/opentime"
            android:layout_width="wrap_content"
            android:textStyle="bold"
            android:layout_height="wrap_content"
            android:fontFamily="@font/ekkamai"
            android:textSize="20dp"
            android:text="เมนูที่แนะนำ"/>

        <TextView
            android:layout_below="@+id/txtMenu"
            android:id="@+id/recmenu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/ekkamai"
            android:textSize="20dp"
            android:text=""/>

        <TextView
            android:id="@+id/txtPrice"
            android:layout_below="@id/recmenu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:fontFamily="@font/ekkamai"
            android:textSize="20dp"
            android:text="ช่วงราคา"/>

        <TextView
            android:id="@+id/pricerate"
            android:layout_below="@+id/txtPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/ekkamai"
            android:textSize="20dp"
            android:text=""/>
    </RelativeLayout>

    <ImageButton
        android:id="@+id/btnMap"
        android:layout_width="95dp"
        android:layout_height="95dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="420dp"
        android:background="@drawable/mark"/>

    <Button
        android:id="@+id/buttonBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/btnMap"
        android:layout_alignParentStart="true"
        android:layout_marginStart="0dp"
        android:layout_marginBottom="23dp"
        android:onClick="backMain"
        android:text="back" />

</RelativeLayout>